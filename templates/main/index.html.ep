% layout 'default';
      <form action="<%= url_for('update') %>" method="post">
        <div class="form-group form-row">
          <label for="prompt"><b>Prompt:</b></label>
          <input type="text" class="form-control form-control-sm" id="prompt" name="prompt" value="<%= $prompt %>" placeholder="The text prompt" title="The text prompt" aria-describedby="promptHelp">
          <small id="promptHelp" class="form-text text-muted">1 to 255 characters</small>
        </div>
        <input type="submit" class="btn btn-sm btn-primary" name="submit" value="Submit" title="Submit form">
      </form>
